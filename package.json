{
	"name": "fibrous-mcp",
	"version": "1.0.0",
	"description": "Fibrous Model Context Protocol Server",
	"main": "build/src/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf build && pnpm build",
		"dev": "tsx src/index.ts",
		"dev:watch": "tsx watch src/index.ts",
		"start": "node build/src/index.js",
		"start:prod": "NODE_ENV=production node build/src/index.js",
		"lint": "eslint src tests",
		"lint:fix": "eslint src tests --fix",
		"format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{md,json}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{md,json}\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"typecheck": "tsc --noEmit",
		"update-interactive": "pnpm update --interactive --latest",
		"clean": "rm -rf build coverage node_modules/.cache"
	},
	"author": {
		"name": "Ahmet Enes Dur",
		"email": "ahmetenesdur@gmail.com",
		"url": "https://github.com/ahmetenesdur"
	},
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"dotenv": "^17.2.3",
		"fibrous-router-sdk": "file:router-sdk",
		"starknet": "^6.24.1",
		"viem": "^2.43.4",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"jest": "^30.2.0",
		"prettier": "^3.7.4",
		"ts-jest": "^29.4.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
